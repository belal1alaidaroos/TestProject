APP_NAME="Worker Management System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=Asia/Riyadh
APP_LOCALE=ar

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database - SQL Server
DB_CONNECTION=sqlsrv
DB_HOST=127.0.0.1
DB_PORT=1433
DB_DATABASE=worker_management
DB_USERNAME=sa
DB_PASSWORD=YourStrongPassword123!

# Redis for Queues
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Queue Configuration
QUEUE_CONNECTION=redis
QUEUE_FAILED_DRIVER=database-uuids

# JWT Configuration
JWT_SECRET=
JWT_TTL=1800
JWT_REFRESH_TTL=20160

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost:3000
SESSION_DOMAIN=localhost

# File Storage
FILESYSTEM_DISK=local
UPLOAD_PATH=storage/app/uploads

# SMS Configuration (Internal Stub)
SMS_PROVIDER=internal
SMS_BASE_URL=http://localhost:8080/sms
SMS_API_KEY=stub_key

# ERP Configuration (Internal Stub)
ERP_PROVIDER=internal
ERP_BASE_URL=http://localhost:8080/erp
ERP_API_KEY=stub_key

# System Settings
RESERVATION_TIMEOUT_CREATE=300
RESERVATION_TIMEOUT_PAY=600
OTP_EXPIRY=300
OTP_MAX_ATTEMPTS=3
OTP_RATE_LIMIT=3

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Cache
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Broadcasting
BROADCAST_DRIVER=log