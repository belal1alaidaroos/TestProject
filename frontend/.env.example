# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_API_TIMEOUT=30000

# Internationalization
VITE_DEFAULT_LOCALE=en
VITE_FALLBACK_LOCALE=ar
VITE_SUPPORTED_LOCALES=en,ar

# Application Settings
VITE_APP_NAME="Employee Portal"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Employee Recruitment Portal"

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_MOCK_DATA=false

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Real-time Updates
VITE_ENABLE_WEBSOCKETS=false
VITE_WEBSOCKET_URL=ws://localhost:6001

# Development
VITE_DEV_MODE=true
VITE_LOG_LEVEL=debug